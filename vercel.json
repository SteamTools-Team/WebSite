{
  "rewrites": [
    { "source": "/fr-FR", "destination": "/fr.html" },
    { "source": "/fr-FR/", "destination": "/fr.html" },
    { "source": "/en-EN", "destination": "/en.html" },
    { "source": "/en-EN/", "destination": "/en.html" },

    { "source": "/fr-FR/:path*", "destination": "/:path*" },
    { "source": "/en-EN/:path*", "destination": "/:path*" }
  ],
  "functions": {
    "api/*.js": { "runtime": "nodejs18.x" }
  },
  "redirects": [
    { "source": "/fr", "destination": "/fr-FR/", "permanent": true },
    { "source": "/en", "destination": "/en-EN/", "permanent": true },

    { "source": "/", "destination": "/index.html", "permanent": false }
  ]
}
